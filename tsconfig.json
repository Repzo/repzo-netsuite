{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noImplicitThis": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "*test*"]
}
